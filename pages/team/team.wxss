/**index.wxss**/
.navbar {
    display: flex;
    border-bottom: 1px solid #eee;
}
.navbar-item {
    flex: 1.0;
    text-align: center;
    font-size: 14px;
    color: #999;
    margin-bottom: -1px;
}
.navbar-text {
    display: block;
    width: 100px;
    height: 40px;
    line-height: 40px;
    margin: auto;
}
.navbar-text.active {
    border-bottom: 2px solid #000;
    color: #000;
    font-weight: bold;
}
.hidden {
    display: none;
}
/*items  */
.items{
	padding: 0px 15px 15px;
}
.items .title{
  display: flex;
  justify-content: center; 
  color: #ccc;
  background: red;
  font-size: 30rpx;
  padding: 10rpx;
}
.items .items-li{
		display:flex;
    flex-direction: row;
		margin-bottom:24px;
		background-color:#fff;  
		box-shadow: 0 1px 6px 0 rgba(74,97,127,0.14);
		border-radius: 4px; 
		padding:16px 10px; 
    background:green;
    width: 100%;
}
.items .project{
  width:60px;
  height:60px;
  display: inline-block;
  border-radius:50%;
  margin-right:20rpx;
}
.items .name{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 40rpx;
  color: #202020;
  background: #ccc;
}
.items .name .text{
  width: 160px;
  background: red;
}
.items .name text{
  display:inline-block;
}
.items .name .link{
  color: #3C96FF;
  text-decoration:none;
  font-size:24rpx;
  width: 60px;
  background: #ccc;

}
.items .job{
  font-size:26rpx;
  color: #202020;
  padding:0.25rem 0;
}
.items .label{
  font-size:24rpx;
  color: #202020;
}
.items .label text{
    border: 1px solid #8AC0FF;
    border-radius: 20px;
    padding:3px 6px;
    display:inline-block;
    margin-right:6px;
}
