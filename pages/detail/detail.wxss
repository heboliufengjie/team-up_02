/**index.wxss**/
.container{
  position: relative;
  width:100%;
  height:100%;
  overflow: hidden;
  background-size: cover;
  background: green;
  padding: 20rpx;
}
 .detail{
  width: 100%;
  height:100%;
  background: #ccc;
  border-radius: 4px;
} 
/*top  */
.top{
  position: relative;
  width: 100%;
  height: 100px;
}
.top image{
  width: 100%;
  height:100%;
}
.top .follow{
  position: absolute;
  right: 20rpx;
  top: 10rpx;
  font-size: 24rpx;
  color: #000;
}
/*header  */
.header{
  position: absolute;
  left: 50%;
  margin-left: -35px;
  margin-top: -35px;
}
.header image{
  width: 70px;
  height: 70px;
  border-radius: 50%;
}
/*others  */
.others{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  width: 100%;
  height: 100%;
  background: #fff;
  padding-top: 50px;
}
.others .name{

}
.others .job{
  font-size: 30rpx;
  color: #ccc;
  padding-top: 20rpx;
}
.others .desc{
  font-size: 30rpx;
  color: #ccc;
  padding-top: 60rpx;
}
.others .desc{
  font-size: 26rpx;
  color: #ccc;
  padding-top: 80rpx;
}
.others .label{
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
}
.others .label text{
  font-size: 30rpx;
  color: #ccc;
  border: 1px solid #8AC0FF;
  border-radius: 20px;
  padding:3px 6px;
  display:inline-block;
  margin-right:6px;
  margin-bottom:20rpx;
}
/*party  */
.party{
  display: flex;
  flex-wrap: nowrap;
  height:120rpx;
  width: 100%;
  text-align: center;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
.party text{
  width: 50%;
  height:120rpx;
  line-height: 120rpx;
}
.party text:first-child { 
  border-right: 1px solid #000;
}