
<view class="container">
  <view class="header">
    <image class="logo" src="/imgs/1.jpg" background-size="cover"></image>
    <text class="name">teamUp</text> 
  </view>
  <view class="section">
    <view class="section__title">用户名</view>
    <input name="input" placeholder="请输入用户名" />
  </view>
  <view class="section">
    <view class="section__title">密码</view>
    <input password type="text" placeholder="请输入密码"/>
    <text class="forgot-password" bindtap="forgotPassword">忘记密码</text>
  </view>
  <view>
    <button class="login" bindtap="login">登录</button>
  </view>
  <view class="other" style='flex-direction:row;justify-content: flex-start;'>
    <view class="wx_login" bindtap="wx_login">微信登陆</view>
    <view class="count-null">
      还没有账号？<text bindtap="register">去注册</text>
    </view>
  </view>
 </view>
